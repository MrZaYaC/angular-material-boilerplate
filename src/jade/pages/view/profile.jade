.profile-header-wrap
  .profile-info(layout="row" layout-sm="column" layout-align-sm="center center")
    .avatar
      img(src="/img/profile/user-default-avatar.jpg")
    .info(layout="column" layout-align="center start" layout-align-sm="center center")
      .name(ng-bind="vm.getFullName()")
      .email(ng-bind="vm.user.username")
      .location(layout="row" layout-align="start end" ng-if="vm.user.profile.city")
        md-icon location_on
        span(ng-bind="vm.user.profile.city")
        span(ng-if="vm.user.profile.country") ,&nbsp;
        span(ng-bind="vm.user.profile.country")
md-tabs(md-dynamic-height md-border-bottom)
  md-tab(label="{{'PROFILE.PROFILE' | translate}}")
    md-content.md-padding
      form(name="vm.userForm")
        div(layout layout-sm="column")
          md-input-container(flex)
            label(translate="PROFILE.LABELS.FNAME")
            input(type="text" ng-model='vm.user.profile.firstName' name="firstName")
          md-input-container(flex)
            label(translate="PROFILE.LABELS.LNAME")
            input(type="text" ng-model='vm.user.profile.lastName' name="lastName")
        div(layout layout-sm="column")
          md-input-container.md-input-always-float(layout flex="50")
            label(translate="PROFILE.LABELS.GENDER")
            md-radio-group.md-primary(ng-model='vm.user.profile.gender' layout flex-order="2")
              md-radio-button(value='male')
                span(translate="PROFILE.LABELS.MALE")
              md-radio-button(value='female')
                span(translate="PROFILE.LABELS.FEMALE")
          md-input-container.md-input-always-float(layout)
            label(translate="PROFILE.LABELS.BIRTHDAY")
            md-datepicker(ng-model="vm.user.profile.birthday" md-placeholder="{{'PROFILE.LABELS.BIRTHDAY_PLACEHOLDER' | translate}}" flex-order="2")
        md-input-container(flex='')
          label(translate="PROFILE.LABELS.ADDRESS")
          input(ng-model='vm.user.profile.address')
        div(layout='', layout-sm='column')
          md-input-container(flex='')
            label(translate="PROFILE.LABELS.CITY")
            input(ng-model='vm.user.profile.city')
          md-input-container(flex='')
            label(translate="PROFILE.LABELS.COUNTRY")
            input(ng-model='vm.user.profile.country')
          md-input-container(flex='')
            label(translate="PROFILE.LABELS.ZIP")
            input(ng-model='vm.user.profile.zip')
        div(layout layout-align="end center")
          md-button.md-raised.md-primary(translate="FORM.BTN.SAVE" ng-click='vm.saveProfile()' aria-label="{{ 'FORM.BTN.SAVE' | translate }}")
  md-tab(label="{{'PROFILE.PASSWORD' | translate}}")
    md-content.md-padding
div(layout="row")
  div(flex-sm="80" offset-sm="10" flex-md="60" offset-md="20" flex="33" offset="33" style="margin-top: 32px;")
    md-content(layout-padding)
      form(name="signUp.form" novalidate)
        md-input-container
          label(translate="MAIN.EMAIL")
          input(type="text" name='login' ng-model="signUp.user.login" ng-model-options="{ updateOn: 'blur' }" required login login-exist)
          div(ng-messages="signUp.form.login.$error" ng-if="signUp.form.login.$dirty")
            div(ng-message="login")
              span(translate="SIGN_PAGE.ERROR.LOGIN")
            div(ng-message="loginExist")
              span(translate="SIGN_PAGE.ERROR.LOGIN_EXIST")
            div(ng-message="required")
              span(translate="FORM.ERROR.REQUIRED")
        md-input-container
          label(translate="MAIN.PASSWORD")
          input(type="password" name='password' ng-model='signUp.user.password' ng-model-options="{ updateOn: 'blur' }" password required)
          div(ng-messages="signUp.form.password.$error" ng-if="signUp.form.password.$dirty")
            div(ng-message="required")
              span(translate="FORM.ERROR.REQUIRED")
        md-input-container
          label(translate="MAIN.CONFIRM_PASSWORD")
          input(type="password" name="confirmPassword" ng-model="signUp.user.confirmPassword" ng-model-options="{ updateOn: 'blur' }" required compare-to="signUp.user.password")
          div(ng-messages="signUp.form.confirmPassword.$error")
            div(ng-message="compareTo")
              span(translate='SIGN_PAGE.ERROR.CONFIRM_PASSWORD')
        div(layout layout-align="center")
          md-button.md-raised.md-primary(translate="SIGN_PAGE.REGISTER" ng-click='signUp.signUp()' aria-label="{{ 'SIGN_PAGE.REGISTER' | translate }}")